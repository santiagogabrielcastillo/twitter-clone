<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <div class="user">
        <div class="user-header">
          <%= link_to home_path do %>
            <i class="fas fa-arrow-left"></i>
          <% end %>
          <h3><%= @user.username %></h3>
          <p><%= @user.tweets.count %> Tweets</p>
        </div>
        <div class="user-banner">
          <%= image_tag 'https://images.unsplash.com/photo-1616424285354-3057203b5f44?ixid=MXwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwxM3x8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60' %>
        </div>
        <div class="user-avatar">
          
        </div>
      </div>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>
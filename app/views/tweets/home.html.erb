<div class="container">
  <div class="row">
    <div class="col-12">
      <%= simple_form_for @tweet do |f| %>
        <%= f.input :content %>
        <%= f.submit 'Tweet', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <% @tweets.each do |tweet| %>
        <p><%= tweet.user.email %></p>
        <p><%= tweet.content %></p>
      <% end %>
    </div>
  </div>
</div>